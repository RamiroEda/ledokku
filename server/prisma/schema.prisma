datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String     @id @default(uuid())
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt
  username              String     @unique
  avatarUrl             String
  email                 String
  githubId              String     @unique
  githubAccessToken     String
  refreshToken          String
  refreshTokenExpiresAt DateTime
  App                   App[]
  Database              Database[]
  AppBuild              AppBuild[]
  Activity              Activity[]
}

model App {
  id            String         @id @default(uuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  name          String
  type          AppTypes
  appBuild      AppBuild[]
  databases     Database[]
  User          User?          @relation(fields: [userId], references: [id])
  userId        String?
  AppMetaGithub AppMetaGithub?
  Activity      Activity[]
}

enum AppTypes {
  DOKKU
  GITHUB
  GITLAB
  DOCKER
}

model AppMetaGithub {
  id                      String   @id @default(uuid())
  app                     App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId                   String   @unique
  repoId                  String
  repoOwner               String
  repoName                String
  branch                  String
  githubAppInstallationId String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

model AppBuild {
  id        String         @id @default(uuid())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  status    AppBuildStatus
  app       App            @relation(fields: [appId], references: [id])
  appId     String
  User      User?          @relation(fields: [userId], references: [id])
  userId    String?
  Activity  Activity[]
}

enum AppBuildStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  ERRORED
}

model Database {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  type      DbTypes
  version   String?
  apps      App[]
  User      User?      @relation(fields: [userId], references: [id])
  userId    String?
  Activity  Activity[]
}

enum DbTypes {
  REDIS
  POSTGRESQL
  MONGODB
  MYSQL
}

model Activity {
  id            String           @id @default(uuid())
  name          String
  description   String?
  refersToModel ModelReferences?
  referenceId   String?
  Database      Database?        @relation(fields: [referenceId], references: [id], map: "database_activity")
  App           App?             @relation(fields: [referenceId], references: [id], map: "app_activity")
  AppBuild      AppBuild?        @relation(fields: [referenceId], references: [id], map: "app_build_activity")
  modifierId    String
  modifier      User             @relation(fields: [modifierId], references: [id])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

enum ModelReferences {
  Database
  App
  AppBuild
}
